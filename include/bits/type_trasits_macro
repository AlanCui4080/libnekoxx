#ifndef __NEKOXX_BITS_TYPE_TRASITS_MACRO_INC__
#define __NEKOXX_BITS_TYPE_TRASITS_MACRO_INC__


#define __libnekoxx_typehelper(name, type)           \
	template <> struct name<type> : public true_type { \
	}
#define __libnekoxx_typehelper_su(name, type)      \
	__libnekoxx_typehelper(name, type);        \
	__libnekoxx_typehelper(name, signed type); \
	__libnekoxx_typehelper(name, unsigned type)

#endif //__NEKOXX_BITS_TYPE_TRASITS_MACRO_INC__
