#ifndef __NEKOXX_NEW_INC__
#define __NEKOXX_NEW_INC__

#include <exception>

namespace std
{
	class bad_alloc : public exception {
	    public:
		virtual const char *what()
		{
			return "std::bad_alloc";
		}
	};
}; // namespace std

#endif // __NEKOXX_NEW_INC__
